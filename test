Heartbeat
| where TimeGenerated > ago(1d)
| summarize LastHeartbeat=max(TimeGenerated) by Computer
| join kind=inner (
    Event
    | where TimeGenerated > ago(1d)
    | where EventLog == "Application"
    | where Source in ("Application Error", "Windows Error Reporting")
    | where RenderedDescription contains "explorer.exe"
    | project CrashTime=TimeGenerated, Computer, CrashDetails=RenderedDescription
) on Computer
| project Computer, LastHeartbeat, CrashTime, CrashDetails
| order by CrashTime desc

